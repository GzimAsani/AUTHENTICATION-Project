<div class='container'>
  
    <% if blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

        <ul>
          <% blog.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class='row justify-content-center'>
      <div class='col-10'>
        <%= form_with(model: blog, class: 'shadow-lg p-3 mb-3 form-bg rounded', local: true) do |form| %>
        <div class='form-group row'>
          <%= form.label :title, class: 'text-white col-2 col-form-label'%>
          <div class='col-10'>
            <%= form.text_field :title, class: 'form-control rounded', placeholder: "Title of article" %>
          </div>
        </div>

        <div class='form-group row'> 
          <%= form.label :descripion, class: 'text-white col-2 col-form-label' %>
          <div class='col-10'>
            <%= form.text_area :description, rows: 10, class: 'form-control rounded', placeholder: "Description of article"%>
          </div>
        </div>

        <div class="actions form-group row justify-content-center">
          <%= form.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  <%= link_to '[ Cancel and return to articles listing ]', blogs_path, class: 'text-white' %>
  </div>
</div>