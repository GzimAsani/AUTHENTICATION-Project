<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class='row justify-content-center'>
  <div class='col-5'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <%= f.label :your_name, class: 'text-white ml-3' %>
        <div class='col-10'>
          <%= f.email_field :name, required: true, class: 'form-control', placeholder: 'Email', autofocus: true, autocomplete: "email" %>
        </div>    
      </div>

      <div class="form-group row">
        <%= f.label :username, class: 'text-white ml-3' %>
        <div class='col-10'>
          <%= f.email_field :username, required: true, class: 'form-control', placeholder: 'Email', autofocus: true, autocomplete: "email" %>
        </div>    
      </div>
      
      <div class="form-group row">
        <%= f.label :email_adress, class: 'text-white ml-3' %>
        <div class='col-10'>
          <%= f.email_field :email, required: true, class: 'form-control', placeholder: 'Email', autofocus: true, autocomplete: "email" %>
        </div>    
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group row">
        <%= f.label :password, class: 'text-white ml-3' %>
        <div class='col-10'>
            <%= f.password_field :password, required: true, class: 'form-control' %>
        </div> 
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, class: 'text-white ml-3'%>
        <div class='col-10'>
          <%= f.password_field :password_confirmation, required: true, class: 'form-control' %>
        </div>  
      </div>

      <div class="form-group row">
        <%= f.label :current_password, class: 'text-white ml-3' %> <i>(we need your current password to confirm your changes)</i><br />
        <div class='col-10'>
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>
      </div>

      <div class="actions mb-3">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg"%>
      </div>
  </div>
<% end %>
</div>
  <h3>Cancel my account</h3>

  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <%= link_to "Back", :back %>
</div>
