<h2>Change your password</h2>
<div class='justify-content-center'>
  <div class='col-5'>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group row">
        <%= f.label :password, "New password", class: 'text-white ml-3' %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <div class='col-10'>
          <%= f.password_field :password, required: true, autocomplete: "new-password", class: 'form-control' %>
        </div>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions mb-3">
        <%= f.submit "Change my password", class: "btn btn-outline-light btn-lg" %>
      </div>
  </div>
    <% end %>
  <div class='sign-up-button'>
    <%= render "devise/shared/links" %>
  </div>
</div>