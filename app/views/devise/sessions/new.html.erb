<h2 class='ml-3 mb-3 text-primary'>Log in</h2>
<div class='justify-content-center'>
  <div class='col-5'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group row">
        <%= f.label :email_adress, class: 'text-white ml-3' %>
        <div class='col-10'>
          <%= f.email_field :email, required: true, class: 'form-control', placeholder: 'Email', autofocus: true, autocomplete: "email" %>
        </div>    
      </div>

      <div class="form-group row">
        <%= f.label :password, class: 'text-white ml-4 pr-4' %>
        <div class='col-10'>
            <%= f.password_field :password, required: true, class: 'form-control' %>
        </div> 
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group row">
          <div class='col-5 d-flex flex-row'>
            <%= f.check_box :remember_me, class: 'mt-1 mr-2'%>
            <%= f.label :remember_me, class: '' %>
          </div>
        </div>
      <% end %>

      <div class="actions mb-3">
          <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg"%>
      </div>
  </div>
    <% end %>
  <div class='sign-up-button'>
    <%= render "devise/shared/links" %>
  </div>
</div>
